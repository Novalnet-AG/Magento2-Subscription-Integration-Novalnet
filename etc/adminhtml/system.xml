<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="subscription" translate="label" type="text" sortOrder="410" showInDefault="1" showInWebsite="1" showInStore="1">
            <resource>Novalnet_Subscription::general</resource>
            <tab>sales</tab>
            <label>Subscription</label>
            <group id="subscription_config" translate="label" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Subscription Management</label>
                <field id="supported_payments" translate="label" type="multiselect" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Supported Payments</label>
                    <can_be_empty>1</can_be_empty>
                    <source_model>Novalnet\Subscription\Model\Config\Source\AvailablePayments</source_model>
                    <config_path>novalnet/subscription/supported_payments</config_path>
                    <tooltip>Selected payment methods will be supported for subscription</tooltip>
                </field>
                <field id="customer_can_cancel" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Display Subscription Cancellation Option for End User</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>novalnet/subscription/customer_can_cancel</config_path>
                </field>
                <field id="cancel_email_address" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Notify subscription cancellation to email</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>novalnet/subscription/cancel_email_address</config_path>
                    <tooltip>Enable this option to notify the given e-mail address When the subscription get cancelled</tooltip>
                </field>
                <field id="calculate_shipping" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Shipping Cost</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>novalnet/subscription/calculate_shipping</config_path>
                    <tooltip>If Yes, shipping charges will be calculated for all renewal orders</tooltip>
                </field>
                <field id="can_remaind" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Send subscription renewal reminder to email</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <config_path>novalnet/subscription/can_remaind</config_path>
                    <tooltip>If Yes, renewal reminder email sent to customer 2 days ahead of due</tooltip>
                </field>
            </group>
        </section>
    </system>
</config>
