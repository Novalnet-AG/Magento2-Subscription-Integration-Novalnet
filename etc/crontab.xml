<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job instance="Novalnet\Subscription\Cron\RecurringProcess" method="execute" name="novalnet_subscription_recurring_process">
            <schedule>0 * * * *</schedule>
        </job>
        <job instance="Novalnet\Subscription\Cron\ReminderProcess" method="execute" name="novalnet_subscription_reminder_process">
            <schedule>* * * * *</schedule>
        </job>
    </group>
</config>
