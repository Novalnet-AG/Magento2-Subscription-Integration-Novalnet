<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Quote\Model\Quote\Address\RateResult\Method">
        <plugin name="validate_shipping_amount_recurring" type="Novalnet\Subscription\Plugin\ShippingAmount" sortOrder="100" disabled="false" />
    </type>
    <type name="Magento\Catalog\Model\Product\Type\AbstractType">
        <plugin name="validate_possible_buy_from_list" type="Novalnet\Subscription\Plugin\IsPossibleBuyFromList" sortOrder="100" disabled="false" />
    </type>
    <type name="Magento\Payment\Model\Checks\ZeroTotal">
        <plugin name="check_zero_total_for_recurring" type="Novalnet\Subscription\Plugin\ZeroTotal" sortOrder="100" disabled="false" />
    </type>
    <type name="Magento\Payment\Model\Method\AbstractMethod">
        <plugin name="check_available_payments" type="Novalnet\Subscription\Plugin\AvailablePayments" sortOrder="9999" disabled="false" />
    </type>
    <type name="Magento\Catalog\Block\Product\ListProduct">
        <plugin name="block-product-list" type="Novalnet\Subscription\Plugin\ProductList"/>
    </type>
    <preference for="Novalnet\Subscription\Api\SubscriptionInterface" type="Novalnet\Subscription\Model\Repository" />
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="novalnet_subscription_profile_list_data_source" xsi:type="string">Novalnet\Subscription\Model\ResourceModel\SubscriptionDetails\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Novalnet\Subscription\Model\ResourceModel\SubscriptionDetails\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">novalnet_subscription_profile_details</argument>
            <argument name="resourceModel" xsi:type="string">Novalnet\Subscription\Model\ResourceModel\SubscriptionDetails</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="novalnet_subscription_related_order_data_source" xsi:type="string">Novalnet\Subscription\Model\ResourceModel\RelatedOrders\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Novalnet\Subscription\Model\ResourceModel\RelatedOrders\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">sales_order_grid</argument>
            <argument name="resourceModel" xsi:type="string">Magento\Sales\Model\ResourceModel\Order</argument>
        </arguments>
    </virtualType>
    <!-- Logger -->
    <type name="Novalnet\Subscription\Logger\Handler\NovalnetInfo">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Novalnet\Subscription\Logger\NovalnetSubscriptionLogger">
        <arguments>
            <argument name="name" xsi:type="string">NovalnetSubscriptionLogger</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="novalnetNotice" xsi:type="object">Novalnet\Subscription\Logger\Handler\NovalnetNotice</item>
                <item name="novalnetDebug" xsi:type="object">Novalnet\Subscription\Logger\Handler\NovalnetDebug</item>
                <item name="novalnetError" xsi:type="object">Novalnet\Subscription\Logger\Handler\NovalnetError</item>
            </argument>
        </arguments>
    </type>
</config>
