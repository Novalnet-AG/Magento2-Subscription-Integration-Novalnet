<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="styles"/>
    <body>
        <referenceContainer name="content">
            <block class="Novalnet\Subscription\Block\Adminhtml\Profile\View" name="recurring_profile_view" />
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Novalnet\Subscription\Block\Adminhtml\Profile\View\Tabs" name="recurring_profile_view_tabs">
                <block class="Novalnet\Subscription\Block\Adminhtml\Profile\View\Tab\Main" name="recurring_profile_view_tab_main" template="Novalnet_Subscription::profile/view.phtml"/>
                <block class="Novalnet\Subscription\Block\Adminhtml\Profile\View\Tab\RelatedOrders" name="recurring_profile_view_tab_related_orders"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">recurring_profile_view_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">related_orders</argument>
                    <argument name="block" xsi:type="string">recurring_profile_view_tab_related_orders</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
